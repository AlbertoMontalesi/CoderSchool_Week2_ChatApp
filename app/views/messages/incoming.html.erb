<h1>Incoming Messages</h1>
<p> You have <%= @incoming_messages.size %> messages  </p>


<div class="row">
    <div class="col-xs-12 col-sm-6">
        <%= link_to "New Message", new_message_path %>
    </div>
     <div class="col-xs-12 col-sm-6">
        <%= link_to "Add Friends", users_path %>
     </div>


</div>



 



<% @incoming_messages.each do |message| %>
    <div class="row incoming-message">
        <div class="col-xs-12">
            From <%= message.sender %> To <%= message.recipient %>  
        </div>
        <div class="col-xs-12">
            <%= message.subject %>
        </div>
        <div class="col-xs-12">
            <%= message.body %>
        </div>    
       <%= link_to 'show more ', message_path(id: message.id) %>
    </div>


<% end %>
