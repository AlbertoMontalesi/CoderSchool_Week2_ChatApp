<h1>New Message</h1>



<%= form_for @message, method: 'post'  do |m| %>

<!-- i am using id and not email, so in the form i need to add the number of the user -->
    <%= m.label :recipient_id %>
    <%= m.select :recipient_id %> 
    <%= m.text_field :recipient_id %>
    <%= m.label :subject %>
    <%= m.text_field :subject%>
    <%= m.label :body %>
    <%= m.text_field :body%>
    <%= m.submit %>
<% end %>



