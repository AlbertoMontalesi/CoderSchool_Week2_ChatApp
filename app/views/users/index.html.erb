<h1> Manage friends </h1>

<h2> Add Friends</h2>
<div class="row">
    <% @user.each do |u| %>
        <div class="card">
            <div class="card-block">
                    <h4 class="card-title">  <%= u.email%></h4>
                    <h6 class="card-subtitle mb-2 text-muted"> <%= link_to "Add Friend", friendships_path(:friend_id => u), :method => :post %> </h6>    
            </div>
        </div>
    <% end %>

</div>



